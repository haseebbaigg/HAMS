<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/message_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_single_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/message_single_image">

    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/message_text_background"
        android:padding="13dp"
        android:text="Doctor can you give me some guidelines about my health"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>